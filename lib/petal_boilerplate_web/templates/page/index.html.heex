<.container class="mt-10 ">
  <.h1>Petal Components</.h1>
  <.link to="/live" class="underline">View Live View JS components</.link>
</.container>

<.container class="mt-10">
  <.h2 underline label="Containers" />
</.container>

<.container max_width="full" class="flex items-center justify-center h-10 my-5 bg-gray-100">
  Max width "full"
</.container>

<.container max_width="lg" class="flex items-center justify-center h-10 my-5 bg-gray-100">
  Max width "lg"
</.container>

<.container max_width="md" class="flex items-center justify-center h-10 my-5 bg-gray-100">
  Max width "md"
</.container>

<.container max_width="sm" class="flex items-center justify-center h-10 my-5 bg-gray-100">
  Max width "sm"
</.container>

<.container>
  <div>
    <.h2 underline label="Buttons" />
    <.h3 label="Types" />
    <div class="flex flex-wrap gap-2">
    <.a href="#" label="a" />
    <.button label="Button" />
    <.patch href="#" label="Live Patch" />
    <.redirect href="#" label="Live Redirect" />
    </div>
  </div>

  <div class="mt-10">
    <.h3 label="Button colors" />
    <div class="flex flex-wrap gap-2">
    <.button color="primary" label="Primary" />
    <.button color="secondary" label="secondary" />
    <.button color="white" label="White" />
    <.button color="success" label="Success" />
    <.button color="danger" label="Danger" />
    </div>
  </div>

  <div class="mt-10">
    <.h3 label="Button colors (outline)" />
    <div class="flex flex-wrap gap-2">
    <.button color="primary" label="Primary" variant="outline" />
    <.button color="secondary" label="Secondary" variant="outline" />
    <.button color="white" label="White" variant="outline" />
    <.button color="success" label="Success" variant="outline" />
    <.button color="danger" label="Danger" variant="outline" />
    </div>
  </div>

  <div class="mt-10">
    <.h3 label="Button sizes" />
    <div class="flex flex-wrap items-start gap-2">
    <.button size="xs" label="xs" />
    <.button size="sm" label="sm" />
    <.button size="md" label="md" />
    <.button size="lg" label="lg" />
    <.button size="xl" label="xl" />
    </div>
  </div>

  <div class="mt-10">
    <.h3 label="Button states" />

    <div class="flex flex-wrap gap-2">
      <.button disabled type="a" href="/" label="a Disabled" />
      <.button disabled color="primary" label="Button Disabled" />
      <.patch disabled href="/" label="Live Patch Disabled" />
      <.redirect disabled href="/" label="Live Redirect" />
    </div>

    <div class="flex flex-wrap items-start gap-2 mt-2">
      <.button loading size="xs" label="Loading xs" />
      <.button loading size="sm" label="Loading sm" />
      <.button loading size="md" label="Loading md" />
      <.button loading size="lg" label="Loading lg" />
      <.button loading size="xl" label="Loading xl" />
    </div>
  </div>

  <div class="mt-10">
    <.h3 label="Button with icon" />
    <div class="flex flex-wrap gap-2">
      <.button icon type="a" href="/">
        <Heroicons.Solid.home class="w-5 h-5" />
        a with label
      </.button>

      <.button icon type="button">
        <Heroicons.Solid.home class="w-5 h-5" />
        Button with label
      </.button>

      <.patch icon href="/">
        <Heroicons.Solid.home class="w-5 h-5" />
        Live Patch with label
      </.patch>

      <.redirect icon href="/">
        <Heroicons.Solid.home class="w-5 h-5" />
        Live Redirect with label
      </.redirect>
    </div>
  </div>
</.container>

<.container class="mt-10">
  <.h2 underline label="Typography" />
  <.h1>Heading 1</.h1>
  <.h2>Heading 2</.h2>
  <.h3>Heading 3</.h3>
  <.h4>Heading 4</.h4>
  <.h5>Heading 5</.h5>
</.container>

<.container class="mt-10">
  <.h2 underline label="Heroicons" />
  <.h3 label="Heroicons solid" />

  <div class="flex">
    <Heroicons.Solid.home />
    <Heroicons.Solid.home class="w-6 h-6 text-blue-500" />
    <Heroicons.Solid.home class="w-6 h-6 text-green-500" />
    <Heroicons.Solid.chart_pie />
    <Heroicons.Solid.chart_pie class="w-10 h-10 text-blue-500 rotate-90" />
    <Heroicons.Solid.chart_pie class="w-20 h-20 text-green-500 rotate-180" />
  </div>

  <.h3 label="Heroicons outline" class="mt-5" />

  <div class="flex">
    <Heroicons.Outline.home />
    <Heroicons.Outline.home class="w-6 h-6 text-blue-500" />
    <Heroicons.Outline.home class="w-6 h-6 text-green-500" />
  </div>
</.container>

<.container class="mt-10">
  <.h2 underline label="Badges" />
  <div class="flex flex-wrap gap-2">
    <.badge color="primary" label="Primary" />
    <.badge color="secondary" label="Secondary" />
    <.badge color="info" label="Info" />
    <.badge color="success" label="Success" />
    <.badge color="warning" label="Warning" />
    <.badge color="danger" label="Danger" />
    <.badge color="gray" label="Gray" />
  </div>
</.container>

<.container class="mt-10">
  <.h2 underline label="Alerts" />
  <div class="flex items-start">
    <.alert state="info">
      This is an info state
    </.alert>
  </div>
  <div class="flex items-start mt-4">
    <.alert state="success" label="This is a success state" />
  </div>
  <div class="flex items-start mt-4">
    <.alert state="warning" label="This is a warning state" />
  </div>
  <div class="flex items-start mt-4">
    <.alert state="danger" label="This is a danger state" />
  </div>
  <div class="flex items-start max-w-sm mt-4">
    <.alert heading="Optional heading">
      This is quite a long paragraph that takes up more than one line.
    </.alert>
  </div>
</.container>

<.container>
  <.h2 underline label="Forms" class="mt-10" />

  <.form let={f} multipart as={:user} for={%Ecto.Changeset{
    action: :update,
    data: %{name: ""},
    errors: [
      text_input_with_error: {"can't be blank", [validation: :required]},
      text_input_with_error: {"must be at least 2 characters", [validation: :minimum]},
      number_input_with_error: {"can't be blank", [validation: :required]},
      email_input_with_error: {"can't be blank", [validation: :required]},
      password_input_with_error: {"can't be blank", [validation: :required]},
      search_input_with_error: {"can't be blank", [validation: :required]},
      telephone_input_with_error: {"can't be blank", [validation: :required]},
      url_input_with_error: {"can't be blank", [validation: :required]},
      time_input_with_error: {"can't be blank", [validation: :required]},
      time_select_with_error: {"can't be blank", [validation: :required]},
      datetime_select_with_error: {"can't be blank", [validation: :required]},
      datetime_local_input_with_error: {"can't be blank", [validation: :required]},
      color_input_with_error: {"can't be blank", [validation: :required]},
      file_input_with_error: {"can't be blank", [validation: :required]},
      range_input_with_error: {"can't be blank", [validation: :required]},
      textarea_with_error: {"can't be blank", [validation: :required]},
      select_with_error: {"can't be blank", [validation: :required]},
      checkbox_with_error: {"can't be blank", [validation: :required]},
      radio_with_error: {"can't be blank", [validation: :required]},
    ]}
  }>

    <!--
      When creating form fields you can do it two ways:

      1. Use `<.form_field>`, which includes the label and error
      2. You can write the input, label and error separately (if you want to style the form differently)

      The following code shows both methods for each form element:
    -->

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:text_input} />
        <.text_input form={f} field={:text_input} placeholder="eg. John" />
        <.form_field_error form={f} field={:text_input} class="mt-1" />
      </div>

      <div>
        <.form_field
          type="text_input"
          form={f}
          field={:text_input_with_error}
          placeholder="Placeholder"
        />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:email_input} />
        <.email_input form={f} field={:email_input} />
        <.form_field_error form={f} field={:email_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="email_input" form={f} field={:email_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:number_input} />
        <.number_input form={f} field={:number_input} placeholder="eg. 1" />
        <.form_field_error form={f} field={:number_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="number_input" form={f} field={:number_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:password_input} />
        <.password_input form={f} field={:password_input} />
        <.form_field_error form={f} field={:password_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="password_input" form={f} field={:password_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:search_input} />
        <.search_input form={f} field={:search_input} />
        <.form_field_error form={f} field={:search_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="search_input" form={f} field={:search_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:telephone_input} />
        <.telephone_input form={f} field={:telephone_input} />
        <.form_field_error form={f} field={:telephone_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="telephone_input" form={f} field={:telephone_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:url_input} />
        <.url_input form={f} field={:url_input} />
        <.form_field_error form={f} field={:url_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="url_input" form={f} field={:url_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:time_input} />
        <.time_input form={f} field={:time_input} />
        <.form_field_error form={f} field={:time_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="time_input" form={f} field={:time_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:time_select} />
        <.time_select form={f} field={:time_select} />
        <.form_field_error form={f} field={:time_select} class="mt-1" />
      </div>

      <div>
        <.form_field type="time_select" form={f} field={:time_select_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:datetime_local_input} />
        <.datetime_local_input form={f} field={:datetime_local_input} />
        <.form_field_error form={f} field={:datetime_local_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="datetime_local_input" form={f} field={:datetime_local_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:datetime_select} />
        <.datetime_select form={f} field={:datetime_select} />
        <.form_field_error form={f} field={:datetime_select} class="mt-1" />
      </div>

      <div>
        <.form_field type="datetime_select" form={f} field={:datetime_select_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:color_input} />
        <.color_input form={f} field={:color_input} />
        <.form_field_error form={f} field={:color_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="color_input" form={f} field={:color_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:file_input} />
        <.file_input form={f} field={:file_input} />
        <.form_field_error form={f} field={:file_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="file_input" form={f} field={:file_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:range_input} />
        <.range_input form={f} field={:range_input} />
        <.form_field_error form={f} field={:range_input} class="mt-1" />
      </div>

      <div>
        <.form_field type="range_input" form={f} field={:range_input_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 mb-6 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:textarea} />
        <.textarea form={f} field={:textarea} />
        <.form_field_error form={f} field={:textarea} class="mt-1" />
      </div>

      <div>
        <.form_field type="textarea" form={f} field={:textarea_with_error} />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 mb-6 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:select} />
        <.select
          options={["Admin": "admin", "User": "user"]}
          form={f}
          field={:select}
        />
        <.form_field_error form={f} field={:select} class="mt-1" />
      </div>

      <div>
        <.form_field
          type="select"
          options={["Admin": "admin", "User": "user"]}
          form={f}
          field={:select_with_error}
        />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 mb-6 md:grid-cols-2">
      <div>
        <label class="inline-flex items-center block gap-3 mb-6 text-sm text-gray-900 dark:text-gray-200">
          <.checkbox form={f} field={:checkbox} />
          <div>I accept</div>
        </label>

        <.form_field_error form={f} field={:checkbox} class="mt-1" />
      </div>

      <div>
        <.form_field type="checkbox" form={f} field={:checkbox_with_error} label="I accept (with error)" />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4 mb-6 md:grid-cols-2">
      <div>
        <.form_label form={f} field={:radio} />

        <div class="flex flex-col gap-1">
          <label class="inline-flex items-center block gap-3 text-sm text-gray-900 dark:text-gray-200">
            <.radio form={f} field={:radio} value="green" />
            <div>Green</div>
          </label>

          <label class="inline-flex items-center block gap-3 text-sm text-gray-900 dark:text-gray-200">
            <.radio form={f} field={:radio} value="blue" />
            <div>Blue</div>
          </label>

          <label class="inline-flex items-center block gap-3 text-sm text-gray-900 dark:text-gray-200">
            <.radio form={f} field={:radio} value="gray" />
            <div>Gray</div>
          </label>
        </div>

        <.form_field_error form={f} field={:radio} class="mt-1" />
      </div>

      <div>
        <.form_field
          type="radio_group"
          form={f}
          field={:radio_with_error}
          options={["Green": "green", "Blue": "blue", "Gray": "gray"]}
          label="Eye color with error"
        />
      </div>
    </div>
  </.form>
</.container>

<.container class="mt-10">
  <.h2 underline label="Dropdowns" />
  <.h3 label="" />
  <.dropdown label="Dropdown">
    <.dropdown_menu_item type="button">
      <Heroicons.Outline.home class="w-5 h-5 text-gray-500" />
      Button item with icon
    </.dropdown_menu_item>
    <.dropdown_menu_item type="a" href="/" label="a item" />
    <.dropdown_menu_item type="live_patch" href="/" label="Live Patch item" />
    <.dropdown_menu_item type="live_redirect" href="/" label="Live Redirect item" />
  </.dropdown>
</.container>

<.container class="mt-10">
  <.h2 underline label="Loading" />
  <.h3 label="Spinner" />

  <div class="flex items-start gap-3">
    <.spinner show={false} />
    <.spinner show={true} size="sm" />
    <.spinner size="md" class="text-green-500" />
    <.spinner size="lg" class="text-red-500" />
  </div>
</.container>

<.container class="mt-10">
  <.h2 underline label="Breadcrumbs" />
  <.h5 label="Slash" />
    <div class="flex">
      <.breadcrumbs links={[
        %{ label: "Link 1", to: "#" },
        %{ label: "Link 2", to: "#" },
        %{ label: "Link 3", to: "#" }
      ]}/>
    </div>
  <.h5 label="Chevron" class="mt-10" />
  <div class="flex">
  <.breadcrumbs separator="chevron" links={[
    %{ label: "Link 1", to: "#" },
    %{ label: "Link 2", to: "#", link_type: "live_patch" },
    %{ label: "Link 3", to: "#", link_type: "live_redirect" },
  ]}/>
  </div>
</.container>

<div class="mb-40"></div>
